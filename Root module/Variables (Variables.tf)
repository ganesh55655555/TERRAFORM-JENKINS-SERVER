variable "key_name" {
  description = "Name of the key pair for SSH access"
  type        = string
}

variable "instance_type" {
  description = "EC2 instance type for Jenkins server"
  type        = string
  default     = "t2.micro"
}

variable "elastic_ip" {
  description = "Elastic IP for the Jenkins server"
  type        = string
}

variable "github_repo_url" {
  description = "URL of the GitHub repository containing Docker Compose files"
  type        = string
}

variable "snapshot_name" {
  description = "Name of the snapshot schedule"
  type        = string
  default     = "daily-ebs-snapshot"
}
